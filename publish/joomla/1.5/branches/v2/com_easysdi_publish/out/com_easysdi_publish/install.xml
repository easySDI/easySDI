		</languages>
	</administration>
	<files folder="com_easysdi_publish"> 
			<filename>easysdi_publish.php</filename>
			<filename>browser_detection.php</filename>
			<filename>metadata.xml</filename>
			<filename>license.txt</filename>									
			<folder>core</folder>
			<folder>js</folder>
			<folder>img</folder>
			<folder>css</folder>
	</files>
	<languages folder="./language/site">
		<language tag="fr-FR">fr-FR.com_easysdi_publish.ini</language>
		<language tag="en-GB">en-GB.com_easysdi_publish.ini</language>
