<?xml version="1.0" ?>

<project default="mod_easysdi_lastorders" basedir="../../../">
    
    <property name="lastorders.module.name" value="mod_easysdi_lastorders"/>
    <property name="lastorders.module.language.file" value="mod_easysdi_lastorders"/>
    <property name="mod.lastorders.src.out.dir" value="${root.out.dir}/${lastorders.module.name}/src"/>
    <property name="mod.lastorders.package.out.dir" value="${root.out.dir}/${lastorders.module.name}/target"/>
    
    
    <available file="${joomla.module.path}/${lastorders.module.name}" type="dir" property="lastorders.mod.exist"/>
    
    <target name="package" depends="write-xml, build-info, mod_zip" description="Main target" if="${lastorders.mod.exist}"/>
    <target name="sync-package" depends="mod_copy, write-xml, build-info, mod_zip" description="Main target" />
    <target name="sync" depends="mod_copy" description="Main target" />

    
    <target name="mod_copy">
        <echo>Copy module file for ${lastorders.module.name}</echo>
       
        <copy todir="${mod.lastorders.src.out.dir}" overwrite="true">
            <fileset dir="${joomla.module.path}/${lastorders.module.name}" erroronmissingdir="false"/>
        </copy>
        <copy todir="${mod.lastorders.src.out.dir}/language" overwrite="true">
            <fileset dir="${joomla.site.language.dir}" includes="**/*${lastorders.module.language.file}.ini **/*${lastorders.module.language.file}.sys.ini" erroronmissingdir="false"/>
        </copy>
    </target>
    
    <target name="write-xml">
        <echoxml file="${mod.lastorders.src.out.dir}/mod_easysdi_lastorders.xml">
            <extension type="module" version="3.1.0" client="site" method="upgrade">
                <name>mod_easysdi_lastorders</name>
                <author>EasySDI Community</author>
                <creationDate>${xml.releaseDate}</creationDate>
                <copyright>${xml.copyright}</copyright>
                <license>${xml.license}</license>
                <author>${xml.author}</author>
                <authorEmail>${xml.authorEmail}</authorEmail>
                <authorUrl>${xml.authorUrl}</authorUrl>
                <version>${version}</version>
                <description>MOD_EASYSDI_LASTORDERS</description>
                <files>
                    <filename>mod_easysdi_lastorders.xml</filename>
                    <filename module="mod_easysdi_lastorders">mod_easysdi_lastorders.php</filename>
                    <filename>index.html</filename>
                    <filename>helper.php</filename>
                    <filename>tmpl/default.php</filename>
                    <filename>tmpl/index.html</filename>
                </files>
                <languages>
                    <language tag="en-GB">language/en-GB/en-GB.${lastorders.module.language.file}.sys.ini</language>
                    <language tag="en-GB">language/en-GB/en-GB.${lastorders.module.language.file}.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${lastorders.module.language.file}.sys.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${lastorders.module.language.file}.ini</language>
                    <language tag="de-DE">language/de-DE/de-DE.${lastorders.module.language.file}.sys.ini</language>
                    <language tag="de-DE">language/de-DE/de-DE.${lastorders.module.language.file}.ini</language>
                </languages>
                <config>
                </config>
            </extension>
        </echoxml>
    </target>
    
    <!-- Create the build description file. --> 
    <target name="build-info">
        
        <echo>Create buid info file for ${lastorders.module.name} module</echo>
        <mkdir dir="${mod.lastorders.src.out.dir}/META-INF"/>
        <tstamp>
            <format property="buildtime" pattern="dd.MM.yyyy hh:mm:ss aa" />
        </tstamp>
        <exec executable="svnversion" outputproperty="svnrevision">
            <arg line="${mod.lastorders.src.out.dir}"/>
        </exec>
        
        <propertyfile file="${mod.lastorders.src.out.dir}/META-INF/build-info.properties" comment="This file is automatically generated - DO NOT EDIT">
            <entry key="build-datetime" value="${buildtime}"/>
            <entry key="module" value="${lastorders.module.name}"/>
            <entry key="build" value="${version}-r${svnrevision}"/>
            <entry key="build-owner" value="${user.name}"/>
        </propertyfile>
    </target>
    
    <target name="mod_zip">
        
        <echo>Zip module package</echo>
        <jar destfile="${mod.lastorders.package.out.dir}/${lastorders.module.name}.zip">
            <fileset dir="${mod.lastorders.src.out.dir}"/>
        </jar>
    </target>
   
</project>