		<languages folder="./language/admin">
			<language tag="fr-FR">fr-FR.com_easysdi_core.ini</language>
			<language tag="en-GB">en-GB.com_easysdi_core.ini</language>
		</languages>
	</administration>
	<files folder="com_easysdi_core"> 
			<filename>easysdi_core.php</filename>
			<filename>license.txt</filename>									
			<folder>core</folder>
			<folder>js</folder>
			<folder>common</folder>
