<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>db-connector</artifactId>
    <groupId>db</groupId>
    <version>7.0.0</version>
    <name>db db-connector Module</name>
    <packaging>s4j</packaging>	
    
    <!--
        SITE
    -->
    <distributionManagement>
        <site>
            <id>local</id>
            <url>file://C:\Documents and Settings\xnfrbd/target/deploy/site</url>
        </site>
    </distributionManagement>
    
    <!--
        REPORTING
    -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <aggregate>true</aggregate>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>dependencies</report>
                            <report>mailing-list</report>
                            <report>issue-tracking</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
            
        </plugins>
    </reporting>
    
    <!--
        DEPENDENCIES
    -->
    <dependencies>
        <dependency>
            <artifactId>core-framework</artifactId>
            <groupId>funambol</groupId>
            <version>7.0.0</version>
        </dependency>
        
        <dependency>
            <artifactId>server-framework</artifactId>
            <groupId>funambol</groupId>
            <version>7.0.3</version>
        </dependency>
        
        <dependency>
            <artifactId>admin-framework</artifactId>
            <groupId>funambol</groupId>
            <version>7.0.0</version>
        </dependency>
	
	<dependency>
            <artifactId>foundation-core</artifactId>
            <groupId>funambol</groupId>
            <version>7.0.6</version>
        </dependency>
	
	<dependency>
            <artifactId>jse-sdk</artifactId>
            <groupId>funambol</groupId>
            <version>7.0.5</version>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        
                        <manifest>
                            <addClasspath>true</addClasspath>			
                            <addExtensions/>
                            <classpathPrefix/>			  
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!--
                The Funambol Maven Plugin enables the use of the following
                goals:
                - funambol:s4j -} to create a Funambol module archive
            -->
            <plugin>
                <groupId>funambol</groupId>
                <artifactId>funambol-plugin</artifactId>
                <version>1.0.7</version>
                <extensions>true</extensions>
                <configuration>    
		<contextFile>src/main/webapp/META-INF/context.xml</contextFile>
                    <excludes>
                        <exclude>funambol:server-framework</exclude>
                        <exclude>funambol:core-framework</exclude>
                        <exclude>funambol:ext</exclude>
                    </excludes>
                </configuration>
            </plugin>
	    
        </plugins>
    </build> 
    
    <!--
         This is the central Funambol repostiry where all funambol related
         artifacts are stored
    -->
    <repositories>
        <repository>
            <id>artifacts</id>
            <url>http://m2.funambol.org/repositories/artifacts</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>snapshots</id>
            <url>http://m2.funambol.org/repositories/snapshots</url>
        </pluginRepository>
    </pluginRepositories>
    
</project>

