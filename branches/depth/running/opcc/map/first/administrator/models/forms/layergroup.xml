<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_ID" readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" />

		<field name="guid" type="text" size="40" class="inputbox"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_GUID" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_GUID"
			filter="safehtml" />

		<field name="alias" type="text" size="40" class="inputbox"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_ALIAS" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_ALIAS"
			filter="safehtml" />

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" class="inputbox" size="1" />

		<field name="created_by" type="createdby" default=""
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_CREATED_BY" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_CREATED_BY" />

		<field name="created" type="calendar" class="inputbox"
			default="0000-00-00 00:00:00" label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_CREATED"
			description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_CREATED" filter="safehtml" />

		<field name="modified_by" type="text" size="40" class="inputbox"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_MODIFIED_BY" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_MODIFIED_BY"
			filter="safehtml" />

		<field name="modified" type="timeupdated" default=""
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_MODIFIED" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_MODIFIED" />

		<field name="name" type="text" size="40" class="inputbox"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_NAME" description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_NAME"
			required="true" filter="safehtml" />

		<field name="isdefaultopen" type="text" size="40" class="inputbox"
			label="COM_EASYSDI_MAP_FORM_LBL_LAYERGROUP_ISDEFAULTOPEN"
			description="COM_EASYSDI_MAP_FORM_DESC_LAYERGROUP_ISDEFAULTOPEN"
			validate="boolean" required="true" filter="safehtml" />

		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
			class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="asset_id" type="hidden" filter="SAFEHTML" />
	</fieldset>

	<fieldset name="rulesdefinition">
		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="true" class="inputbox" filter="rules" component="com_easysdi_map"
			section="layergroup" validate="rules" />
	</fieldset>

</form>
