<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field  name="id" 
				type="text" 
				default="0" 
				label="COM_EASYSDI_MAP_FORM_LBL_GROUP_ID"
               	readonly="true" 
               	class="readonly"
               	description="JGLOBAL_FIELD_ID_DESC" />
                
       <field 	name="guid" 
       			type="text" 
       			size="40" 
       			class="inputbox"
              	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_GUID"
              	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_GUID" 
		      	filter="safehtml" />
		      	 
       <field 	name="alias" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_ALIAS"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_ALIAS" 
                filter="safehtml" />
                
       <field 	name="access"
				type="accesslevel"
				label="JFIELD_ACCESS_LABEL"
				description="JFIELD_ACCESS_DESC"
				class="inputbox"
				size="1" /> 

       <field 	name="created_by" 
       			type="createdby" 
       			default="" 
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_CREATED_BY"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_CREATED_BY"  /> 

       <field 	name="created" 
       			type="calendar" 
       			class="inputbox"
                default="0000-00-00 00:00:00" 
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_CREATED"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_CREATED" 
                filter="safehtml" /> 

       <field 	name="modified_by" 
       			type="text" 
       			size="40" 
       			class="inputbox"
           	 	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_MODIFIED_BY"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_MODIFIED_BY" 
                filter="safehtml" /> 

       <field 	name="modified" 
       			type="timeupdated" 
       			default="" 
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_MODIFIED"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_MODIFIED"  /> 

       <field 	name="name" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_NAME"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_NAME" 
                required="true" 
                filter="safehtml" /> 

       <field 	name="isdefaultopen" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_MAP_FORM_LBL_GROUP_ISDEFAULTOPEN"
            	description="COM_EASYSDI_MAP_FORM_DESC_GROUP_ISDEFAULTOPEN" 
                validate="boolean" 
                required="true" 
                filter="safehtml" /> 

        <field  name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
		</field> 

		<field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
        <field name="asset_id" type="hidden" filter="SAFEHTML" />
	</fieldset>
	
	<fieldset name="rulesdefinition">
		<field 	name="rules" 
				type="rules" 
				label="JFIELD_RULES_LABEL"
				translate_label="true" 
				class="inputbox" 
				filter="rules"
				component="com_easysdi_map" 
				section="group" 
				validate="rules"
		/>
	</fieldset>

</form>
