<?xml version="1.0" encoding="UTF-8"?>

<project default="build-plg-common-target" basedir=".">
    <target name="plg_copy">
        
        <echo>Copy plugin file for ${plugin.name}</echo>
        <mkdir dir="${src.out.dir}"/>
        <delete>
            <fileset dir="${src.out.dir}" includes="**/*"/>
        </delete>
        <copy todir="${src.out.dir}">
            <fileset dir="${joomla.plugin.path}/${joomla.distinct.plugin.path}"/>
        </copy>
        <copy todir="${src.out.dir}/language">
            <fileset dir="${joomla.administrator.language.dir}" includes="**/*_${language.file.name}.*"/>
        </copy>
    </target>
    
    <target name="plg_zip">
        
        <echo>Zip plugin package</echo>
        <jar destfile="${package.out.dir}/${plugin.name}.zip">
            <fileset dir="${src.out.dir}"/>
        </jar>
    </target>
</project>
