<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
    <name>com_easysdi_service</name>
    <creationDate>15 August 2012</creationDate>
    <releaseDate>26 march 2013</releaseDate>
    <copyright>Copyright (C) 2012. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <author>EasySDI Community</author>
    <authorEmail>contact@easysdi.org</authorEmail>
    <authorUrl>http://www.easysdi.org</authorUrl>
    <version>3.3.0</version>
    <description></description>
    <scriptfile>script.php</scriptfile>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/insert.install.mysql.utf8.sql</file>
            <file driver="mysql" charset="utf8">sql/alter.install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
	<update> 
		<schemas> 
			<schemapath type="mysql">sql/updates</schemapath> 
		</schemas> 
	</update>
    
    <administration>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>easysdi_service.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>libraries</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            <language tag="en-GB">language/en-GB/en-GB.com_easysdi_service.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_easysdi_service.sys.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_easysdi_service.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_easysdi_service.sys.ini</language>
        </languages>
    </administration>
</extension>

