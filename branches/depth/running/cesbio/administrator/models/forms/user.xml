<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		
		<field 	name="rules" 
				type="rules" 
				label="JFIELD_RULES_LABEL"
				translate_label="false" 
				class="inputbox" 
				filter="rules"
				component="com_easysdi_core" 
				section="user" 
				validate="rules"
		/>
		<field name="asset_id" type="hidden" filter="unset" />
		
		<field  name="id" 
        		type="text" 
        		default="0" 
        		label="JGLOBAL_FIELD_ID_LABEL"
                readonly="true" 
                class="readonly"
                description="JGLOBAL_FIELD_ID_DESC" /> 

		<field 	name="catid"
				type="categoryedit"
				extension="com_easysdi_core"
				label="JCATEGORY"
				description="JFIELD_CATEGORY_DESC"
				class="inputbox"
				required="true" />
	
		<field 	name="alias" 
	   			type="text" 
	   			size="40" 
	   			class="inputbox"
	   			required="true"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_ALIAS"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_ALIAS" 
                filter="safehtml" /> 

		<field 	name="user_id"
				type="user"
				default="" 
				label="COM_EASYSDI_CORE_FORM_LBL_USER_USER_ID"
				description="COM_EASYSDI_CORE_FORM_DESC_USER_USER_ID"
				required="true"	/>

		<field 	name="access"
				type="accesslevel"
				label="JFIELD_ACCESS_LABEL"
				description="JFIELD_ACCESS_DESC"
				class="inputbox"
				size="1" />
		
		<field 	name="acronym" 
       			type="text" 
       			size="40" 
       			class="inputbox"
           		label="COM_EASYSDI_CORE_FORM_LBL_USER_ACRONYM"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_ACRONYM" 
                filter="safehtml" /> 

		<field 	name="logo" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_LOGO"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_LOGO" 
                validate="url" 
                filter="safehtml" /> 

		<field 	name="description" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_DESCRIPTION"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_DESCRIPTION" 
                filter="safehtml" /> 

		<field 	name="website" 
       			type="text" 
       			size="40" 
       			class="inputbox"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_WEBSITE"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_WEBSITE" 
                validate="url" 
                filter="safehtml" /> 

		<field 	id="notificationrequesttreatment" 
 				name="notificationrequesttreatment" 
 				type="radio"
                class="inputbox"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_NOTIFICATIONREQUESTTREATMENT"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_NOTIFICATIONREQUESTTREATMENT" 
                default="1" >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
		</field> 

        <field 	name="params" 
        		type="text" 
        		size="40" 
        		class="inputbox"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_PARAMS"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_PARAMS" 
                filter="safehtml" /> 

		<field	name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
        </field> 
                
       	<field  name="created_by" 
				type="user" 
				class="readonly"
				readonly="true" 
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_CREATED_BY"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_CREATED_BY" 
                filter="unset" /> 

        <field 	name="created" 
       			type="calendar" 
       			class="readonly"
       			readonly="true"
                default="0000-00-00 00:00:00" 
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_CREATED"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_CREATED" 
                filter="safehtml" /> 

		<field 	name="modified_by" 
				type="user" 
				class="readonly"
       			readonly="true"
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_MODIFIED_BY"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_MODIFIED_BY" 
                filter="unset" /> 

		<field 	name="modified" 
				type="calendar" 
       			class="readonly"
       			readonly="true"
                default="0000-00-00 00:00:00" 
            	label="COM_EASYSDI_CORE_FORM_LBL_USER_MODIFIED"
            	description="COM_EASYSDI_CORE_FORM_DESC_USER_MODIFIED" 
                filter="safehtml" /> 
                
		<field  name="checked_out" type="hidden" filter="unset" />
		<field  name="checked_out_time" type="hidden" filter="unset" />
		<field  name="guid" type="hidden" filter="unset" /> 
	</fieldset>
</form>
