<?xml version="1.0" ?>
<project default="sync" basedir=".">

	<property name="projet.out.dir" value="out" />


	<target name="com_easysdi" depends="create-structure,compression"
		description="Main target">

	</target>

	<target name="create-structure">
		<echo>Creating the working directory structure</echo>
		<delete>
			<fileset dir="${projet.out.dir}" includes="*" />
		</delete>
		<mkdir dir="${projet.out.dir}" />
	</target>

	<target name="compression" description="Compression">

		<jar compress="true" jarfile="${projet.out.dir}/mod_menu_easysdi.zip"
			basedir="." excludes=" out/** , .cache/** , .svn/** , .settings/** , .project, .prefs, build.xml" />
	</target>

	<target name="sync" description="Copy from here to apache">
		<copy
			todir="C:\www\Site\Joomla\modules\mod_menu_easysdi">
			<fileset dir=".">
				<include name="**/*.php" />
				<include name="**/*.xsl" />
				<include name="**/*.inc" />
				<include name="**/*.jar" />
				<include name="**/*.xml" />
				<include name="**/*.png" />
				<include name="**/*.ttf" />
				<include name="**/*.txt" />
			</fileset>
		</copy>
		<copy		   
				   todir="C:\www\Site\Joomla\language\fr-FR">
				     <fileset dir="./language/site">
				      <include name="**/fr-FR.mod_menu_easysdi.ini" />
				     </fileset>
				    </copy>
				<copy		   
				   todir="C:\www\Site\Joomla\language\en-GB">
				     <fileset dir="./language/site">
				      <include name="**/en-GB.mod_menu_easysdi.ini" />
				     </fileset>
				    </copy>

	</target>


</project>
