<?xml version="1.0" ?>

<project default="plg_getdiffudownloadables" basedir="../../../">
    
    <property name="getdiffudownloadables.plugin.name" value="plg_getdiffudownloadables"/>
    <property name="getdiffudownloadables.plugin.language.file" value="plg_easysdi_admin_info_getdiffudownloadables"/>
    <property name="plg.getdiffudownloadables.src.out.dir" value="${root.out.dir}/${getdiffudownloadables.plugin.name}/src"/>
    <property name="plg.getdiffudownloadables.package.out.dir" value="${root.out.dir}/${getdiffudownloadables.plugin.name}/target"/>
    <property name="joomla.getdiffudownloadables.plugin.path" value="easysdi_admin_info/getdiffudownloadables"/>
    
    <available file="${joomla.plugin.path}/${joomla.getdiffudownloadables.plugin.path}" type="dir" property="getdiffudownloadables.plg.exist"/>
    
    <target name="package" depends="write-xml, build-info, plg_zip" description="Main target" />
    <target name="sync-package" depends="plg_copy, write-xml, build-info, plg_zip" description="Main target" if="${getdiffudownloadables.plg.exist}"/>
    <target name="sync" depends="plg_copy" description="Main target" />
    
    <target name="plg_copy">
        
        <echo>Copy plugin file for ${getdiffudownloadables.plugin.name}</echo>
       
        <copy todir="${plg.getdiffudownloadables.src.out.dir}" overwrite="true">
            <fileset dir="${joomla.plugin.path}/${joomla.getdiffudownloadables.plugin.path}" erroronmissingdir="false"/>
        </copy>
        <copy todir="${plg.getdiffudownloadables.src.out.dir}/language" overwrite="true">
            <fileset dir="${joomla.administrator.language.dir}" includes="**/*${getdiffudownloadables.plugin.language.file}.ini **/*${getdiffudownloadables.plugin.language.file}.sys.ini" erroronmissingdir="false"/>
        </copy>
    </target>
    
    <target name="write-xml">
        <echoxml file="${plg.getdiffudownloadables.src.out.dir}/getdiffudownloadables.xml">
            <extension version="3.0" type="plugin" group="easysdi_admin_info" method="upgrade">
                <name>${getdiffudownloadables.plugin.language.file}</name>
                <author>EasySDI Community</author>
                <creationDate>${xml.releaseDate}</creationDate>
                <copyright>${xml.copyright}</copyright>
                <license>${xml.license}</license>
                <author>${xml.author}</author>
                <authorEmail>${xml.authorEmail}</authorEmail>
                <authorUrl>${xml.authorUrl}</authorUrl>
                <version>${version}</version>
                <description>PLG_EASYSDI_ADMIN_INFO_GETDIFFUDOWNLOADABLES_XML_DESCRIPTION</description>
                <scriptfile>script.php</scriptfile>
                <files>
                    <filename plugin="getdiffudownloadables">script.php</filename>
                    <filename plugin="getdiffudownloadables">getdiffudownloadables.php</filename>
                    <filename>index.html</filename>
                </files>
                <languages>
                    <language tag="en-GB">language/en-GB/en-GB.${getdiffudownloadables.plugin.language.file}.sys.ini</language>
                    <language tag="en-GB">language/en-GB/en-GB.${getdiffudownloadables.plugin.language.file}.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${getdiffudownloadables.plugin.language.file}.sys.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${getdiffudownloadables.plugin.language.file}.ini</language>
                    <language tag="de-DE">language/de-DE/de-DE.${getdiffudownloadables.plugin.language.file}.sys.ini</language>
                    <language tag="de-DE">language/de-DE/de-DE.${getdiffudownloadables.plugin.language.file}.ini</language>
                </languages>

            </extension>
        </echoxml>
    </target>
    
    <!-- Create the build description file. --> 
    <target name="build-info">
        
        <echo>Create buid info file for ${getdiffudownloadables.plugin.name} plugin</echo>
        <mkdir dir="${plg.getdiffudownloadables.src.out.dir}/META-INF"/>
        <tstamp>
            <format property="buildtime" pattern="dd.MM.yyyy hh:mm:ss aa" />
        </tstamp>
        <exec executable="svnversion" outputproperty="svnrevision">
            <arg line="${plg.getdiffudownloadables.src.out.dir}"/>
        </exec>
        
        <propertyfile file="${plg.getdiffudownloadables.src.out.dir}/META-INF/build-info.properties" comment="This file is automatically generated - DO NOT EDIT">
            <entry key="build-datetime" value="${buildtime}"/>
            <entry key="plugin" value="${getdiffudownloadables.plugin.name}"/>
            <entry key="build" value="${version}-r${svnrevision}"/>
            <entry key="build-owner" value="${user.name}"/>
        </propertyfile>
    </target>
    
    <target name="plg_zip">
        
        <echo>Zip plugin package</echo>
        <jar destfile="${plg.getdiffudownloadables.package.out.dir}/${getdiffudownloadables.plugin.name}.zip">
            <fileset dir="${plg.getdiffudownloadables.src.out.dir}" excludes="site/**"/>
        </jar>
    </target>
   
</project>