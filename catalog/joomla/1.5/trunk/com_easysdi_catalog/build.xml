<?xml version="1.0" ?>
<project default="sync" basedir=".">

	<property name="projet.out.dir" value="out" />


	<target name="com_easysdi" depends="create-structure,compression"
		description="Main target">

	</target>

	<target name="create-structure">
		<mkdir dir="${projet.out.dir}" />
		<echo>Creating the working directory structure</echo>
		<delete>
			<fileset dir="${projet.out.dir}" includes="*" />
		</delete>
		
	</target>

	<target name="compression" description="Compression">

		<jar compress="true" jarfile="${projet.out.dir}/com_easysdi_catalog.zip"
			basedir="." excludes=".out/** ; .cache/** ; .svn/** ; .settings/** ; *.project; .prefs" />
	</target>

	<target name="sync" description="Copy from here to apache">
		<copy
			todir="C:\www\Site\Joomla\administrator\components\com_easysdi_catalog">
					<fileset dir=".">
						<include name="**/*.php" />
						<include name="**/*.xsl" />
						<include name="**/*.inc" />
						<include name="**/*.jar" />
						<include name="**/*.xml" />
						<include name="**/*.png" />
						<include name="**/*.ttf" />
						<include name="**/*.txt" />
						<include name="**/*.css" />
					</fileset>
				</copy>
		<copy
			todir="C:\www\Site\Joomla\components\com_easysdi_catalog">
			<fileset dir="./com_easysdi_catalog">
				<include name="**/*.php" />
				<include name="**/*.xsl" />
				<include name="**/*.inc" />
				<include name="**/*.jar" />
				<include name="**/*.xml" />
				<include name="**/*.png" />
				<include name="**/*.ttf" />
				<include name="**/*.txt" />
			</fileset>
		</copy>
		<copy
			todir="C:\www\Site\Joomla\components\com_easysdi_core\views">
			<fileset dir="./com_easysdi_catalog/views">
				<include name="**/*.php" />
				<include name="**/*.xml" />
			</fileset>
		</copy>
		<copy		   
				   todir="C:\www\Site\Joomla\language\fr-FR">
				     <fileset dir="./language/site">
				      <include name="**/fr-FR.com_easysdi_catalog.ini" />
				     </fileset>
				    </copy>
				<copy		   
				   todir="C:\www\Site\Joomla\language\en-GB">
				     <fileset dir="./language/site">
				      <include name="**/en-GB.com_easysdi_catalog.ini" />
				     </fileset>
				    </copy>

	</target>
	

</project>
