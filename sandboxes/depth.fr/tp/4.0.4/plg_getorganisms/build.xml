<?xml version="1.0" ?>

<project default="plg_getorganisms" basedir="../../../">
    
    <property name="getorganisms.plugin.name" value="plg_getorganisms"/>
    <property name="getorganisms.plugin.language.file" value="plg_easysdi_admin_info_getorganisms"/>
    <property name="plg.getorganisms.src.out.dir" value="${root.out.dir}/${getorganisms.plugin.name}/src"/>
    <property name="plg.getorganisms.package.out.dir" value="${root.out.dir}/${getorganisms.plugin.name}/target"/>
    <property name="joomla.getorganisms.plugin.path" value="easysdi_admin_info/getorganisms"/>
    
    <available file="${joomla.plugin.path}/${joomla.getorganisms.plugin.path}" type="dir" property="getorganisms.plg.exist"/>
    
    <target name="package" depends="write-xml, plg_zip" description="Main target" />
    <target name="sync-package" depends="plg_copy, write-xml, plg_zip" description="Main target" if="${getorganisms.plg.exist}"/>
    <target name="sync" depends="plg_copy" description="Main target" />
    
    <target name="plg_copy">
        
        <echo>Copy plugin file for ${getorganisms.plugin.name}</echo>
       
        <copy todir="${plg.getorganisms.src.out.dir}" overwrite="true">
            <fileset dir="${joomla.plugin.path}/${joomla.getorganisms.plugin.path}" erroronmissingdir="false"/>
        </copy>
        <copy todir="${plg.getorganisms.src.out.dir}/language" overwrite="true">
            <fileset dir="${joomla.administrator.language.dir}" includes="**/*${getorganisms.plugin.language.file}.ini **/*${getorganisms.plugin.language.file}.sys.ini" erroronmissingdir="false"/>
        </copy>
    </target>
    
    <target name="write-xml">
        <echoxml file="${plg.getorganisms.src.out.dir}/getorganisms.xml">
            <extension version="3.0" type="plugin" group="easysdi_admin_info" method="upgrade">
                <name>${getorganisms.plugin.language.file}</name>
                <author>EasySDI Community</author>
                <creationDate>15 Septemeber 2013</creationDate>
                <releaseDate>${xml.releaseDate}</releaseDate>
                <copyright>${xml.copyright}</copyright>
                <license>${xml.license}</license>
                <author>${xml.author}</author>
                <authorEmail>${xml.authorEmail}</authorEmail>
                <authorUrl>${xml.authorUrl}</authorUrl>
                <version>${version}</version>
                <description>PLG_EASYSDI_ADMIN_INFO_GETORGANISMS_XML_DESCRIPTION</description>
                <scriptfile>script.php</scriptfile>
                <files>
                    <filename plugin="getorganisms">getorganisms.php</filename>
                    <filename>index.html</filename>
                </files>
                <languages>
                    <language tag="en-GB">language/en-GB/en-GB.${getorganisms.plugin.language.file}.sys.ini</language>
                    <language tag="en-GB">language/en-GB/en-GB.${getorganisms.plugin.language.file}.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${getorganisms.plugin.language.file}.sys.ini</language>
                    <language tag="fr-FR">language/fr-FR/fr-FR.${getorganisms.plugin.language.file}.ini</language>
                </languages>

            </extension>
        </echoxml>
    </target>
    
    <target name="plg_zip">
        
        <echo>Zip plugin package</echo>
        <jar destfile="${plg.getorganisms.package.out.dir}/${getorganisms.plugin.name}.zip">
            <fileset dir="${plg.getorganisms.src.out.dir}" excludes="site/**"/>
        </jar>
    </target>
   
</project>