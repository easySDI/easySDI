<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">

        <field name="name" type="text" size="40" class="inputbox" required="true"
                     label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_NAME"
                     description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_NAME" 
                     filter="safehtml" />

        <field name="alias" type="text" size="40" class="inputbox"
              label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_ALIAS"
              description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_ALIAS" 
              filter="safehtml" /> 

        <field name="description" type="text" size="40" class="inputbox"
              label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_DESCRIPTION"
              description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_DESCRIPTION" 
              filter="safehtml" /> 

        <field name="windowname" type="text" size="40" class="inputbox"
              label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_WINDOWNAME"
              description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_WINDOWNAME" 
              filter="safehtml" /> 
        
        <field name="url" type="text" size="40" class="inputbox"
              label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_URL"
              description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_URL" 
              filter="safehtml" /> 

        <field name="options" type="text" size="40" class="inputbox"
              label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_OPTIONS"
              description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_OPTIONS" 
              filter="safehtml" /> 

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

    

    </fieldset> 


    <fieldset name="hidden">
        <field name="id" type="hidden" filter="safehtml" />
        <field name="resource_id" type="hidden" filter="safehtml" />
        <field name="checked_out" type="hidden" filter="safehtml" />
        <field name="checked_out_time" type="hidden" filter="safehtml" /> 
        <field name="guid" type="hidden" filter="safehtml" /> 
        <field name="ordering" type="hidden" filter="safehtml" /> 
    </fieldset>
    
    <fieldset name="publishing">
        <field name="created_by" type="createdby" default=""  readonly="true"
               label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_CREATED_BY"
               description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_CREATED_BY"  /> 

        <field name="created" type="calendar" 
               default="0" readonly="true"
               label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_CREATED"
               description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_CREATED" 
               filter="safehtml" /> 
    </fieldset>
    
    <fieldset name="publishing_update">
       <field name="modified_by" type="createdby"  readonly="true"
               label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_MODIFIED_BY"
               description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_MODIFIED_BY" 
               default="0" 
               filter="safehtml" /> 

        <field name="modified" type="calendar" class="inputbox"
               default="0"  readonly="true"
               label="COM_EASYSDI_CORE_FORM_LBL_APPLICATION_MODIFIED"
               description="COM_EASYSDI_CORE_FORM_DESC_APPLICATION_MODIFIED" 
               filter="safehtml" />
    </fieldset>
</form>
