<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component" label="COM_EASYSDI_SHOP_COMPONENT_LABEL" description="COM_EASYSDI_SHOP_COMPONENT_DESC" >

           <field name="proxyphp"
                   type="text"
                   default="index.php?option=com_easysdi_shop"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_PROXYPHP"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_PROXYPHP">
           </field>
           
           <field name="maxuploadfilesize"
                   type="text"
                   default="32"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_MAXUPLOADFILESIZE"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_MAXUPLOADFILESIZE">
           </field>
           
           <field name="fileFolder" type="folderlist" default="" label="COM_EASYSDI_SHOP_CONFIG_LBL_DOWNLOADFOLDER" description="COM_EASYSDI_SHOP_CONFIG_DESC_DOWNLOADFOLDER" directory="" filter="" exclude="" stripext="" />
           
           <field name="depositFolder" type="folderlist" default="" label="COM_EASYSDI_SHOP_CONFIG_LBL_DEPOSITFOLDER" description="COM_EASYSDI_SHOP_CONFIG_DESC_DEPOSITFOLDER" directory="" filter="" exclude="" stripext="" />
           
           <field name="ordermap" 
                   type="sql" 
                   class="inputbox input-xxlarge"
                   multiple="false"
                   required ="true"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_ORDERMAP"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_ORDERMAP" 
                   query="SELECT id, name FROM #__sdi_map WHERE state=1 ORDER BY ordering" 
                   key_field="id" 
                   value_field="name"
           />
           
           <field name="orderaccount" 
		 		type="user" 
		 		default="" 
		 		size="40"
		 		required="true"
		 		label="COM_EASYSDI_SHOP_CONFIG_LBL_ORDERGLOBALUSERNAME" 
         		description="COM_EASYSDI_SHOP_CONFIG_DESC_ORDERGLOBALUSERNAME" />
           
            <field name="orderresponseFolder"
                   type="text"
                   default=""
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_ORDERRESPONSEFOLDER"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_ORDERRESPONSEFOLDER">
           </field>         
           
           <field name="archiveorderdelay"
                   type="text"
                   default="10"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_ARCHIVEORDERDELAY"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_ARCHIVEORDERDELAY">
           </field>
           
            <field name="historyorderdelay"
                   type="text"
                   default="20"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_HISTORYORDERDELAY"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_HISTORYORDERDELAY">
           </field>
           
           <field name="surfacedigit"
                   type="text"
                   default="2"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_SURFACEDIGIT"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_SURFACEDIGIT">
           </field>
           
           <field name="maxmetervalue"
                   type="text"
                   default="1000000"
                   class="inputbox input-xxlarge"
                   required ="true"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_MAXMETERVALUE"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_MAXMETERVALUE">
           </field>
           
           <field name="termsofuse"
                   type="text"
                   default=""
                   class="inputbox input-xxlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_TERMSOFUSE"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_TERMSOFUSE">
           </field>
           
           <field name="shopinfomessage"
                   type="editor"
                   default=""
                   class="inputbox input-xxlarge"
                   required ="false"
                   width="300"
                   filter="safehtml"
                   label="COM_EASYSDI_SHOP_CONFIG_LBL_SHOPINFOMESSAGE"
                   description="COM_EASYSDI_SHOP_CONFIG_DESC_SHOPINFOMESSAGE">
           </field>
          
	</fieldset>

	<fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL" >

		<field  name="rules" 
                        type="rules"
			component="com_easysdi_shop"
                        class="inputbox"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
