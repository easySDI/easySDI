                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_MAPTOP"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_MAPTOP">
           </field>
           <field name="mapbottom"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_MAPBOTTOM"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_MAPBOTTOM">
           </field>-->
           
        </fieldset>

	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>
		<field 
                    name="rules" 
                    type="rules"
                    component="com_easysdi_catalog"
                    class="inputbox"
                    filter="rules"
                    validate="rules"
                    label="JCONFIG_PERMISSIONS_LABEL"
                    section="component" />
	</fieldset>

</config>
