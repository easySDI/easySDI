           </field>
           
           <field name="predefinedboundarynorth"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_PREDEFINEDBOUNDARYNORTH"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_PREDEFINEDBOUNDARYNORTH">
           </field>
           
           <field name="predefinedboundarysouth"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_PREDEFINEDBOUNDARYSOUTH"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_PREDEFINEDBOUNDARYSOUTH">
           </field>
           
           <field name="predefinedboundaryeast"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
