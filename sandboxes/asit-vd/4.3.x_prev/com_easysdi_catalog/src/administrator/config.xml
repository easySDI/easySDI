           <field name="mapconfig"
                   type="textarea"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   cols="20"
                   rows="9"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_MAPCONFIG"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_MAPCONFIG">
           </field>
           
           <field name="mapleft"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_MAPLEFT"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_MAPLEFT">
           </field>
           
           <field name="mapright"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
                   size="500"
                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_MAPRIGHT"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_MAPRIGHT">
           </field>
           <field name="maptop"
                   type="text"
                   default=""
                   class="inputbox input-xlarge"
                   required ="false"
