                   label="COM_EASYSDI_CATALOG_CONFIG_LBL_PREDEFINEDBOUNDARYWEST"
                   description="COM_EASYSDI_CATALOG_CONFIG_DESC_PREDEFINEDBOUNDARYWEST">
